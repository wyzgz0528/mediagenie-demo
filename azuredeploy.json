{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string",
      "defaultValue": "[concat('mediagenie-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Web应用的名称"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "资源位置"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1V2",
        "P2V2",
        "P3V2"
      ],
      "metadata": {
        "description": "App Service定价层 (F1=免费, B1=基本, S1=标准, P1V2=高级)"
      }
    },
    "azureOpenAIKey": {
      "type": "securestring",
      "metadata": {
        "description": "Azure OpenAI API密钥"
      }
    },
    "azureOpenAIEndpoint": {
      "type": "string",
      "metadata": {
        "description": "Azure OpenAI服务端点"
      }
    },
    "azureOpenAIDeployment": {
      "type": "string",
      "defaultValue": "gpt-4.1",
      "metadata": {
        "description": "Azure OpenAI部署名称"
      }
    },
    "azureOpenAIApiVersion": {
      "type": "string",
      "defaultValue": "2025-01-01-preview",
      "metadata": {
        "description": "Azure OpenAI API版本"
      }
    },
    "azureSpeechKey": {
      "type": "securestring",
      "metadata": {
        "description": "Azure Speech服务密钥"
      }
    },
    "azureSpeechRegion": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Azure Speech服务区域"
      }
    },
    "azureVisionKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Azure Computer Vision密钥(可选)"
      }
    },
    "azureVisionEndpoint": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Azure Computer Vision端点(可选)"
      }
    }
  },
  "variables": {
    "hostingPlanName": "[concat(parameters('siteName'), '-plan')]",
    "linuxFxVersion": "PYTHON|3.10"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('siteName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "[variables('linuxFxVersion')]",
          "appCommandLine": "cd backend/media-service && gunicorn -w 4 -k uvicorn.workers.UvicornWorker main:app --bind 0.0.0.0:8000",
          "appSettings": [
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            },
            {
              "name": "AZURE_OPENAI_API_KEY",
              "value": "[parameters('azureOpenAIKey')]"
            },
            {
              "name": "AZURE_OPENAI_ENDPOINT",
              "value": "[parameters('azureOpenAIEndpoint')]"
            },
            {
              "name": "AZURE_OPENAI_DEPLOYMENT",
              "value": "[parameters('azureOpenAIDeployment')]"
            },
            {
              "name": "AZURE_OPENAI_API_VERSION",
              "value": "[parameters('azureOpenAIApiVersion')]"
            },
            {
              "name": "AZURE_SPEECH_KEY",
              "value": "[parameters('azureSpeechKey')]"
            },
            {
              "name": "AZURE_SPEECH_REGION",
              "value": "[parameters('azureSpeechRegion')]"
            },
            {
              "name": "AZURE_VISION_KEY",
              "value": "[parameters('azureVisionKey')]"
            },
            {
              "name": "AZURE_VISION_ENDPOINT",
              "value": "[parameters('azureVisionEndpoint')]"
            },
            {
              "name": "WEBSITE_HTTPLOGGING_RETENTION_DAYS",
              "value": "7"
            }
          ],
          "alwaysOn": "[if(equals(parameters('sku'), 'F1'), false(), true())]",
          "http20Enabled": true,
          "minTlsVersion": "1.2"
        },
        "httpsOnly": true
      }
    }
  ],
  "outputs": {
    "websiteUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('siteName'))).defaultHostName)]",
      "metadata": {
        "description": "应用访问URL"
      }
    },
    "apiUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('siteName'))).defaultHostName, '/api')]",
      "metadata": {
        "description": "API访问URL"
      }
    }
  }
}
