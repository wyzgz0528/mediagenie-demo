{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appNamePrefix": {
      "type": "string",
      "defaultValue": "mediagenie",
      "metadata": {
        "description": "应用名称前缀,将自动添加唯一后缀"
      },
      "maxLength": 20,
      "minLength": 3
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "资源部署位置"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1V2",
        "P2V2",
        "P3V2"
      ],
      "metadata": {
        "description": "App Service 定价层 (推荐 B1 或更高,避免免费层限制)"
      }
    },
    "azureOpenAIKey": {
      "type": "securestring",
      "metadata": {
        "description": "Azure OpenAI API 密钥 (必需)"
      }
    },
    "azureOpenAIEndpoint": {
      "type": "string",
      "metadata": {
        "description": "Azure OpenAI 服务端点,例: https://your-openai.openai.azure.com/"
      }
    },
    "azureOpenAIDeployment": {
      "type": "string",
      "defaultValue": "gpt-4.1",
      "metadata": {
        "description": "Azure OpenAI 部署模型名称"
      }
    },
    "azureOpenAIApiVersion": {
      "type": "string",
      "defaultValue": "2025-01-01-preview",
      "metadata": {
        "description": "Azure OpenAI API 版本"
      }
    },
    "azureSpeechKey": {
      "type": "securestring",
      "metadata": {
        "description": "Azure Speech Service 密钥 (必需)"
      }
    },
    "azureSpeechRegion": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Azure Speech Service 区域"
      }
    },
    "azureVisionKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Azure Computer Vision 密钥 (可选)"
      }
    },
    "azureVisionEndpoint": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Azure Computer Vision 端点 (可选)"
      }
    },
    "repoUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "GitHub 仓库 URL (可选,用于自动部署)"
      }
    },
    "repoBranch": {
      "type": "string",
      "defaultValue": "main",
      "metadata": {
        "description": "GitHub 仓库分支"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(resourceGroup().id)]",
    "backendAppName": "[concat(parameters('appNamePrefix'), '-api-', variables('uniqueSuffix'))]",
    "frontendAppName": "[concat(parameters('appNamePrefix'), '-web-', variables('uniqueSuffix'))]",
    "hostingPlanName": "[concat(parameters('appNamePrefix'), '-plan-', variables('uniqueSuffix'))]",
    "backendUrl": "[concat('https://', variables('backendAppName'), '.azurewebsites.net')]",
    "frontendUrl": "[concat('https://', variables('frontendAppName'), '.azurewebsites.net')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      },
      "tags": {
        "displayName": "MediaGenie App Service Plan",
        "project": "MediaGenie",
        "environment": "production"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[variables('backendAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
      ],
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "PYTHON|3.10",
          "appCommandLine": "cd backend/media-service && gunicorn -w 4 -k uvicorn.workers.UvicornWorker main:app --bind 0.0.0.0:8000 --timeout 120",
          "alwaysOn": "[if(equals(parameters('sku'), 'F1'), false(), true())]",
          "http20Enabled": true,
          "minTlsVersion": "1.2",
          "ftpsState": "Disabled",
          "appSettings": [
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            },
            {
              "name": "AZURE_OPENAI_API_KEY",
              "value": "[parameters('azureOpenAIKey')]"
            },
            {
              "name": "AZURE_OPENAI_ENDPOINT",
              "value": "[parameters('azureOpenAIEndpoint')]"
            },
            {
              "name": "AZURE_OPENAI_DEPLOYMENT",
              "value": "[parameters('azureOpenAIDeployment')]"
            },
            {
              "name": "AZURE_OPENAI_API_VERSION",
              "value": "[parameters('azureOpenAIApiVersion')]"
            },
            {
              "name": "AZURE_SPEECH_KEY",
              "value": "[parameters('azureSpeechKey')]"
            },
            {
              "name": "AZURE_SPEECH_REGION",
              "value": "[parameters('azureSpeechRegion')]"
            },
            {
              "name": "AZURE_VISION_KEY",
              "value": "[parameters('azureVisionKey')]"
            },
            {
              "name": "AZURE_VISION_ENDPOINT",
              "value": "[parameters('azureVisionEndpoint')]"
            },
            {
              "name": "WEBSITE_HTTPLOGGING_RETENTION_DAYS",
              "value": "7"
            },
            {
              "name": "ALLOWED_ORIGINS",
              "value": "[variables('frontendUrl')]"
            }
          ],
          "cors": {
            "allowedOrigins": [
              "[variables('frontendUrl')]"
            ],
            "supportCredentials": false
          }
        }
      },
      "tags": {
        "displayName": "MediaGenie Backend API",
        "project": "MediaGenie",
        "component": "backend"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[variables('frontendAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Web/sites', variables('backendAppName'))]"
      ],
      "kind": "app,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "NODE|18-lts",
          "alwaysOn": "[if(equals(parameters('sku'), 'F1'), false(), true())]",
          "http20Enabled": true,
          "minTlsVersion": "1.2",
          "ftpsState": "Disabled",
          "appSettings": [
            {
              "name": "REACT_APP_MEDIA_SERVICE_URL",
              "value": "[variables('backendUrl')]"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "18-lts"
            }
          ]
        }
      },
      "tags": {
        "displayName": "MediaGenie Frontend Web",
        "project": "MediaGenie",
        "component": "frontend"
      }
    }
  ],
  "outputs": {
    "frontendUrl": {
      "type": "string",
      "value": "[variables('frontendUrl')]",
      "metadata": {
        "description": "前端应用访问 URL (主 URL)"
      }
    },
    "backendUrl": {
      "type": "string",
      "value": "[variables('backendUrl')]",
      "metadata": {
        "description": "后端 API 访问 URL"
      }
    },
    "apiDocsUrl": {
      "type": "string",
      "value": "[concat(variables('backendUrl'), '/docs')]",
      "metadata": {
        "description": "API 文档 URL (Swagger)"
      }
    },
    "healthCheckUrl": {
      "type": "string",
      "value": "[concat(variables('backendUrl'), '/health')]",
      "metadata": {
        "description": "健康检查 URL"
      }
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]",
      "metadata": {
        "description": "资源组名称"
      }
    },
    "backendAppName": {
      "type": "string",
      "value": "[variables('backendAppName')]",
      "metadata": {
        "description": "后端 Web App 名称"
      }
    },
    "frontendAppName": {
      "type": "string",
      "value": "[variables('frontendAppName')]",
      "metadata": {
        "description": "前端 Web App 名称"
      }
    },
    "landingPageUrl": {
      "type": "string",
      "value": "[concat(variables('backendUrl'), '/marketplace/landing')]",
      "metadata": {
        "description": "Azure Marketplace Landing Page URL (在 Partner Center 中配置)"
      }
    },
    "connectionWebhookUrl": {
      "type": "string",
      "value": "[concat(variables('backendUrl'), '/marketplace/webhook')]",
      "metadata": {
        "description": "Azure Marketplace Connection Webhook URL (在 Partner Center 中配置)"
      }
    },
    "marketplaceHealthUrl": {
      "type": "string",
      "value": "[concat(variables('backendUrl'), '/marketplace/health')]",
      "metadata": {
        "description": "Marketplace 集成健康检查 URL"
      }
    }
  }
}
