# MediaGenie Demo Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=demo

# Azure AD Configuration
AZURE_CLIENT_ID=your-azure-ad-client-id
AZURE_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_TENANT_ID=your-azure-ad-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# Azure Cognitive Services
AZURE_COGNITIVE_SERVICES_KEY=your-cognitive-services-key
AZURE_COGNITIVE_SERVICES_ENDPOINT=https://your-region.api.cognitive.microsoft.com/

# Database (Azure Database for PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/mediagenie_demo

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Azure Marketplace SaaS Integration
AZURE_MARKETPLACE_CLIENT_ID=your-marketplace-client-id
AZURE_MARKETPLACE_CLIENT_SECRET=your-marketplace-client-secret
AZURE_MARKETPLACE_TENANT_ID=your-marketplace-tenant-id

# Application URLs (for callbacks)
FRONTEND_URL=http://your-aci-ip
BACKEND_URL=http://your-aci-ip/api
MARKETPLACE_URL=http://your-aci-ip/marketplace

# Logging
LOG_LEVEL=INFO

# Demo-specific settings (reduced resource usage)
MAX_CONCURRENT_REQUESTS=5
CACHE_TTL_SECONDS=300